{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "lib",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["*.config.js", "node_modules", "lib", "src/storybook", "src/**/*.test.ts"]
}
